# Firebase Configuration
# Get these values from your Firebase project settings > General > Your apps
# Note: These values are safe to expose publicly - they identify your Firebase project
# but don't provide authentication. Access control is handled by Firebase Authentication and Firestore Security Rules.
VITE_FIREBASE_API_KEY=                   # Public API key for Firebase services
VITE_FIREBASE_AUTH_DOMAIN=               # Auth domain (e.g., your-project.firebaseapp.com)
VITE_FIREBASE_PROJECT_ID=                # Unique project identifier
VITE_FIREBASE_STORAGE_BUCKET=            # Cloud Storage bucket (e.g., your-project.appspot.com)
VITE_FIREBASE_MESSAGING_SENDER_ID=       # Cloud Messaging sender ID (numeric)
VITE_FIREBASE_APP_ID=                    # Firebase app ID

# Email Configuration
# SMTP settings for sending emails
MAIL_PASS=your_email_password_or_app_password    # Use app-specific password for Gmail
MAIL_USERNAME=your_email@example.com             # SMTP username (usually your email)
MAIL_FROM_NAME=Your App Name                     # Display name for outgoing emails
MAIL_HOST=smtp.gmail.com                         # SMTP server (Gmail example)
MAIL_PORT=587                                    # SMTP port (587 for TLS, 465 for SSL)

# Security
# Generate a random 32-character string for encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here    # Used for encrypting sensitive data